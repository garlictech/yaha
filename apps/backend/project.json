{
  "root": "apps/backend",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "prefix": "backend",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "apps/backend",
        "parallel": false,
        "commands": ["yarn sls package --stage='{args.env}'"]
      },
      "outputs": ["apps/backend/.serverless"]
    },
    "synth": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "apps/backend",
        "parallel": false,
        "commands": ["yarn sst cdk synth --stage='{args.env}'"]
      },
      "outputs": ["apps/backend/cdk.out", "apps/backend/.build"]
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "apps/backend",
        "parallel": false,
        "commands": [
          {
            "command": "../../tools/deploy-backend.sh '{args.env}'"
          }
        ]
      }
    },
    "remove": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "apps/backend",
        "parallel": false,
        "commands": [
          {
            "command": "yarn sst remove --stage='{args.env}'"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/backend/**/*.ts"],
        "cache": true
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/backend"],
      "options": {
        "jestConfig": "apps/backend/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["layer:app", "platform:nodejs"]
}
