{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "prefix": "backend",
  "targets": {
    "build": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "cwd": "apps/backend",
        "parallel": false,
        "commands": ["../../tools/build-backend.sh '{args.env}'"]
      },
      "outputs": ["{projectRoot}/build"]
    },
    "synth": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "cwd": "apps/backend",
        "parallel": false,
        "commands": ["yarn sst cdk synth --stage='{args.env}'"]
      },
      "outputs": ["{projectRoot}/cdk.out", "{projectRoot}/.build"]
    },
    "deploy": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "cwd": "apps/backend",
        "parallel": false,
        "commands": [
          {
            "command": "../../tools/deploy-backend.sh '{args.env}'"
          }
        ]
      }
    },
    "remove": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "cwd": "apps/backend",
        "parallel": false,
        "commands": [
          {
            "command": "yarn sst remove --stage='{args.env}'"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/backend/**/*.ts"],
        "cache": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/backend"],
      "options": {
        "jestConfig": "apps/backend/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["layer:app", "platform:nodejs"]
}
