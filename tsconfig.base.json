{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "removeComments": true,
    "downlevelIteration": true,
    "noUnusedLocals": false,
    "target": "es2020",
    "module": "esnext",
    "typeRoots": ["./typings", "./node_modules/@types"],
    "types": ["node", "jest"],
    "lib": ["es2015", "es2016", "es2017", "dom", "ES2021"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@yaha/backend/hike-search/services": [
        "libs/backend/hike-search/services/src/index.ts"
      ],
      "@yaha/backend/hike-search/utils": [
        "libs/backend/hike-search/utils/src/index.ts"
      ],
      "@yaha/backend/image-tagger": ["libs/backend/image-tagger/src/index.ts"],
      "@yaha/backend/shared/utils": ["libs/backend/shared/utils/src/index.ts"],
      "@yaha/content": ["libs/content/src/index.ts"],
      "@yaha/flutter-js": ["libs/flutter-js/src/index.ts"],
      "@yaha/gql-api": ["libs/gql-api/src/index.ts"],
      "@yaha/integration-tests/backend": [
        "libs/integration-tests/backend/src/index.ts"
      ],
      "@yaha/shared/config": ["libs/shared/config/src/index.ts"],
      "@yaha/shared/graphql/api-client": [
        "libs/shared/graphql/api-client/src/index.ts"
      ],
      "@yaha/shared/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "tmp",
    "dist",
    "artifacts",
    ".git",
    "cyreport",
    "coverage"
  ]
}
